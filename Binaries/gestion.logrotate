/var/log/gestion/gestion.log {
  daily
  copytruncate
  rotate 30
  mail root@localhost
  postrotate
    /opt/profeda/Gestion/Binaries/log_scan_errors
  endscript
  nocompress
}

/var/log/gestion/events.log {
  daily
  copytruncate
  rotate 30
  mail root@localhost
  prerotate
    /opt/profeda/Gestion/Binaries/sort_events /var/log/gestion/events.log /tmp/gestion_events.log
    MAIL=/usr/bin/bsd-mailx
    if [ ! -x $MAIL ]; then
      MAIL=/usr/bin/mail
    fi
    cat -a /tmp/gestion_events.log | $MAIL -s "Events from $( hostname )" root@localhost
    rm /tmp/gestion_events.log
  endscript
  nocompress
}

