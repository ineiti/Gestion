#!/bin/bash

logger "Starting Gestion"
sleep 2
cd $( dirname $0 )/..
if pgrep -f ruby.*Gestion; then
  logger "Killing old Gestion"
  pkill -f ruby.*Gestion
  logger "Waiting for 10 seconds"
  sleep 10
  logger "Killing old Gestion with -9"
  pkill -9 -f ruby.*Gestion
fi
logger "Deleting old LogAction"
rm data/LogAction*
logger "Starting new Gestion"
screen -S Gestion -d -m ./Gestion.rb
