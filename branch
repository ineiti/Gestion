#!/bin/bash

./commit "Making branch $1"

dirs_do(){
  for d in AfriCompta QooxView LibNet Gestion; do
    cd ../$d
    $1
  done
}

if echo $( hg branches ) | grep -q -v $1; then
  echo Branch $1 doesnt exist, creating
  dirs_do "git branch $1"
  dirs_do "hg branch $1"
fi

dirs_do "git checkout $1"
dirs_do "hg branch $1"

