#!/bin/bash

BASE=/var/www
HOST=vpn-man
if [ ! "$1" ]; then
  BASE=$BASE/test
elif [ "$1" != production ]; then
  HOST=$1
fi

for a in Gestion QooxView AfriCompta; do
  echo Pushing $a
  cd ../$a
  hg commit
  hg push -f --new-branch $1
  echo Updating $a on $HOST
  ssh root@$HOST.wifi "cd $BASE/$a; hg up"
done
